
@page
@model LoginModel
@{
        ViewData["Title"] = "Login";
    Layout = "_Layout2";
}


<body>
    <div class="container">
            <div class="form-wrapper ">
                <h2>Login</h2>
    <form class="form-control" method="post">
                <input type="email" asp-for="@Model.Email" class="input-field" placeholder="Email" required />
                <input type="password" asp-for="@Model.Password" class="input-field" placeholder="Password" required />
                <button type="submit" class="btn btn-primary">Log In</button> <br />
    </form>
            <p>Don't have an account? <a href="SignUp">Sign Up</a></p>
        </div>
        </div>
</body>

