@page
@model project.Pages.Index1Model
@{
    ViewData["Title"] = "Detailed Recipe";
}

<style>
    .ingredients-table {
        width: 50%;
        margin: 0 auto;
        border-collapse: collapse;
        text-align: center;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

        .ingredients-table th, .ingredients-table td {
            padding: 10px;
            border: 1px solid #ddd;
        }

        .ingredients-table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .ingredients-table td {
            background-color: #fff;
        }
</style>

<div class="bradcam_area bradcam_bg_1">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="bradcam_text text-center">
                    <h3 style="color: black;">

                        @Model.r.Description

                    </h3>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /bradcam_area  -->

<div class="recepie_details_area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-6 col-md-6">
                <div class="recepies_thumb">
                    <img src="img/recepie/@Model.r.Image" alt="">
                </div>
            </div>
            <div class="col-xl-6 col-md-6">
                <div class="recepies_info">
                    <h3>@Model.r.Description</h3>
                    <p>@Model.r.Instructions</p>

                    <div class="resepies_details">
                        <ul>
                            <li>
                                <p>
                                    <strong>Rating</strong> :
                                    @for (int i = 0; i < @Model.r.Rating; i++)
                                    {
                                        <i class="fa fa-star"></i>
                                    }
                                </p>
                            </li>
                            <li><p><strong>Time</strong> : @Model.r.CookingTime </p></li>
                            <li><p><strong>Category</strong> : @Model.r.CategoryName </p></li>
                            <li><p><strong>Tags</strong> :  @Model.r.Name</p></li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="recepies_text">
                    <table class="ingredients-table">
                        <thead>
                            <tr>
                                <th>Ingredient</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var ingredients = Model.r.Ingredients.Split(", ");
                                foreach (var ingredient in ingredients)
                                {
                                    <tr>
                                        <td>@ingredient</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

